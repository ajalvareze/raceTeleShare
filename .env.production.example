APP_ENV=production
APP_NAME=RaceTrace
DEBUG=false

# ── Database ────────────────────────────────────────────────────────────────
# These three vars are used by BOTH the app (DATABASE_URL) and the postgres
# container (POSTGRES_*). Keep POSTGRES_PASSWORD consistent with DATABASE_URL.
POSTGRES_USER=racetrace
POSTGRES_PASSWORD=change-this-strong-password
POSTGRES_DB=racetrace
DATABASE_URL=postgresql://racetrace:change-this-strong-password@db:5432/racetrace

# ── Redis ───────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ── Security ────────────────────────────────────────────────────────────────
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=replace-with-64-char-random-hex-string
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
ADMIN_TOKEN_EXPIRE_MINUTES=120

# ── OAuth ────────────────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_REDIRECT_BASE_URL=https://your-domain.com

# ── File storage ─────────────────────────────────────────────────────────────
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_SIZE_MB=200

# ── CORS ─────────────────────────────────────────────────────────────────────
ALLOWED_ORIGINS=["https://your-domain.com"]
