APP_ENV=testing
APP_NAME=RaceTrace
DEBUG=false

# ── Database ────────────────────────────────────────────────────────────────
# These three vars are used by BOTH the app (DATABASE_URL) and the postgres
# container (POSTGRES_*). Keep POSTGRES_PASSWORD consistent with DATABASE_URL.
POSTGRES_USER=racetrace
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=racetrace_test
DATABASE_URL=postgresql://racetrace:change-this-password@db:5432/racetrace_test

# ── Redis ───────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ── Security ────────────────────────────────────────────────────────────────
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=replace-with-64-char-random-hex-string
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ADMIN_TOKEN_EXPIRE_MINUTES=60

# ── OAuth (leave blank to disable) ─────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
OAUTH_REDIRECT_BASE_URL=https://testing.your-domain.com

# ── File storage ─────────────────────────────────────────────────────────────
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_SIZE_MB=50

# ── CORS ─────────────────────────────────────────────────────────────────────
ALLOWED_ORIGINS=["https://testing.your-domain.com"]
